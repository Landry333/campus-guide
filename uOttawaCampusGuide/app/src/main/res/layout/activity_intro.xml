<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.josephroque.uottawacampusguide.IntroActivity" >
    
    <RelativeLayout
        android:id="@+id/rl_intro_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <View
            android:id="@+id/view_indicator_2"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="@drawable/position_indicator_inactive" />

        <View
            android:id="@+id/view_indicator_1"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_toLeftOf="@id/view_indicator_2"
            android:layout_toStartOf="@id/view_indicator_2"
            android:layout_margin="4dp"
            android:background="@drawable/position_indicator_inactive" />

        <View
            android:id="@+id/view_indicator_0"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_toLeftOf="@id/view_indicator_1"
            android:layout_toStartOf="@id/view_indicator_1"
            android:layout_margin="4dp"
            android:background="@drawable/position_indicator_inactive" />

        <View
            android:id="@+id/view_indicator_3"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_toEndOf="@id/view_indicator_2"
            android:layout_toRightOf="@id/view_indicator_2"
            android:layout_margin="4dp"
            android:background="@drawable/position_indicator_inactive" />

        <View
            android:id="@+id/view_indicator_4"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_toEndOf="@id/view_indicator_3"
            android:layout_toRightOf="@id/view_indicator_3"
            android:layout_margin="4dp"
            android:background="@drawable/position_indicator_inactive" />

        <TextView
            android:id="@+id/tv_intro_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:text="@string/text_intro_skip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vp_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/rl_intro_toolbar" />

</RelativeLayout>
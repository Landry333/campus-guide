<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.josephroque.uottawacampusnavigator.fragment.LanguageFragment">

    <View
        android:id="@+id/view_lang_placeholder_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/rl_lang_en"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/primary_garnet"
        android:layout_alignParentTop="true"
        android:layout_above="@id/view_lang_placeholder_1">

        <View
            android:id="@+id/view_lang_placeholder_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:text="@string/text_lang_continue_en"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/view_lang_placeholder_2"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:text="@string/text_lang_intro_en"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/view_lang_placeholder_2"
            android:gravity="center_horizontal"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lang_fr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/primary_gray"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/view_lang_placeholder_1">

        <View
            android:id="@+id/view_lang_placeholder_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:text="@string/text_lang_continue_fr"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/view_lang_placeholder_3"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:text="@string/text_lang_intro_fr"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/view_lang_placeholder_3"
            android:gravity="center_horizontal"/>

    </RelativeLayout>

</RelativeLayout>

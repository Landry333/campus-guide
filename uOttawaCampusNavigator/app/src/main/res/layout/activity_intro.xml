<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_intro_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <View
            android:id="@+id/view_indicator_2"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_margin="@dimen/indicator_width"
            android:layout_centerHorizontal="true"
            android:background="@drawable/position_indicator" />

        <View
            android:id="@+id/view_indicator_1"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_margin="@dimen/indicator_width"
            android:layout_toLeftOf="@id/view_indicator_2"
            android:layout_toStartOf="@id/view_indicator_2"
            android:background="@drawable/position_indicator" />

        <View
            android:id="@+id/view_indicator_0"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_margin="@dimen/indicator_width"
            android:layout_toLeftOf="@id/view_indicator_1"
            android:layout_toStartOf="@id/view_indicator_1"
            android:background="@drawable/position_indicator" />

        <View
            android:id="@+id/view_indicator_3"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_margin="@dimen/indicator_width"
            android:layout_toRightOf="@id/view_indicator_2"
            android:layout_toEndOf="@id/view_indicator_2"
            android:background="@drawable/position_indicator" />

        <View
            android:id="@+id/view_indicator_4"
            android:layout_width="@dimen/indicator_width"
            android:layout_height="@dimen/indicator_height"
            android:layout_margin="@dimen/indicator_width"
            android:layout_toRightOf="@id/view_indicator_3"
            android:layout_toEndOf="@id/view_indicator_3"
            android:background="@drawable/position_indicator" />

        <TextView
            android:id="@+id/tv_intro_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/text_intro_continue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text"/>

    </RelativeLayout>

</RelativeLayout>
